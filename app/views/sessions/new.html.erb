
<%= form_for(:session, url: login_path) do |f| %>
<div class="form-group row">
  <div class="col-sm-2">
   <%= f.label :email,class:"col-form-label-lg" %>
   </div>
   <br>
   <div class="col-sm-6">
   <%= f.email_field :email,class:"form-control",placeholder:"Enter your email address"%>
   </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
   <%= f.label :password,class:"col-form-label-lg" %>
   </div>
   <br>
   <div class="col-sm-6">
   <%= f.password_field :password,class:"form-control",placeholder:"Enter a password"%>
   </div>
</div>
<div class="col-sm-2 offset-sm-4">
   <%= f.submit "Log in", class:"btn btn-primary btn-lg "%>
</div>
<% end %>
<div class="col-xs-4 col-xs-offset-4">

[ <%= link_to "Cancel request and return to articles listing", articles_path %> ]

</div>
