<% if obj.errors.any? %>
<div class="row">
  <div class="col-sm-8 offset-sm-2" style="margin-bottom:30px">
    <div class="card bg-danger">
      <div class="card-header">
          <%= pluralize(obj.errors.count,"error") %>
           prevented the article from being created
      </div>
      <div class="card-body">

        <ul>
        <% obj.errors.full_messages.each do |msg| %>
        <li>
        <%= msg %>
        </li>
        <% end %>
        </ul>
       </div>
     </div>
    </div>
  </div>
  <% end %>
