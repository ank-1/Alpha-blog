<h1 align="center">Sign Up for AlphaBlog</h1>
<%= render'shared/errors', obj:@user%>

<%= form_for @user do |f| %>
<div class="form-group row ">
  <div class="col-sm-2 ">
    <%= f.label :username ,class:"col-form-label-lg" %>
  </div>
    <br>
    <div class="col-sm-8">
    <%= f.text_field :username,class:"form-control",placeholder:"Enter a username",autofocus:true  %>
    </div>
</div>
<div class="form-group row">
  <div class="col-sm-2">
   <%= f.label :email,class:"col-form-label-lg" %>
   </div>
   <br>
   <div class="col-sm-8">
   <%= f.email_field :email,class:"form-control",placeholder:"Enter your email address"%>
   </div>
</div>

<div class="form-group row">
  <div class="col-sm-2">
   <%= f.label :password,class:"col-form-label-lg" %>
   </div>
   <br>
   <div class="col-sm-8">
   <%= f.password_field :password,class:"form-control",placeholder:"Enter a password"%>
   </div>
</div>
<div class="col-sm-2 offset-sm-4">
   <%= f.submit 'Sign up', class:"btn btn-primary btn-lg " %>
</div>
<% end %>
