<h1 align="center"> Listing all Users</h1>
<div align="center">
  <div align="center">
    <%= will_paginate %>
  </div>
<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="card col-md-4 offset-md-4">
        <li><%= link_to gravatar_for(user), user_path(user) %></li>
        <li class="article-title">
        <%= link_to user.username, user_path(user),class:"user-name" %>
        </li>
        <li><small><%= pluralize(user.articles.count, "article") if user.articles %></small></li>
        <% if logged_in? && current_user.admin? %>
           <%= link_to "Delete this user" ,user_path(user),method: :delete,
           data: {confirm: "Are you sure you want to delete user and all their articles"} %>
        <% end %>
      </div>
    </div>
  </ul>
<% end %>
<div align="center">
  <%= will_paginate %>
</div>
</div>
