  <%= render'shared/errors', obj:@article%>

<%= form_for @article do |f| %>
  <div class="form-group row ">
    <div class="col-sm-2 ">
      <%= f.label :title ,class:"col-form-label-lg" %>
    </div>
      <br>
      <div class="col-sm-8">
      <%= f.text_field :title,class:"form-control",placeholder:"Title for the article",autofocus:true  %>
      </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-2">
     <%= f.label :description,class:"col-form-label-lg" %>
     </div>
     <br>
     <div class="col-sm-8">
     <%= f.text_area :description,class:"form-control",placeholder:"Description for the article",rows:10 %>
     </div>
 </div>

 <div class="from-group row">
   <div class="col-sm-8 offset-sm-2 form-check form-check-inline">
     <%=f.collection_check_boxes :category_ids,Category.all,:id,:name do |cb| %>
        <%= cb.label(class:"form-check-inline form-check"){cb.check_box(class:"checkbox")  +  cb.text} %>
     <% end %>
   </div>
 </div>

 <div class="col-sm-2 offset-sm-4">
     <%= f.submit class:"btn btn-primary btn-lg " %>
 </div>
<% end %>
  [ <%= link_to "Cancel request and return to articles listing", articles_path ,class:"align-center"%> ]
