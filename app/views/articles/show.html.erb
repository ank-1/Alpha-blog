<h2 align="center"><strong> Title:  <%= @article.title %> </strong></h2>
  <div class="card bg-light" align="center" style="padding:15px;">
    <h3><strong>Description</strong> </h3>
    <%= simple_format(@article.description) %>
    <div>
      <%= link_to "back to articles listing", articles_path,class: "btn btn-sm btn-primary" %>
      <%= link_to "edit this article" , edit_article_path(@article),class: "btn btn-warning btn-sm" %>
      <%= link_to "delete this article", article_path(@article),method: :delete,class: "btn btn-danger btn-sm", data:{confirm: "Are you sure you want to delete this article?"} %>
    </div>

  </div>
